/**index.wxss**/
.UCenter-bg {
  background-image: url(https://al-yun-oss.oss-cn-hangzhou.aliyuncs.com/MiniProgram/my/myBgBlue.jpeg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 120rpx;   
}
.cu-avatar.lg {
  width: 150rpx;
  height: 150rpx;
  font-size: 2em;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
/* pages/my/my.wxss */
.my_logo{
  background: none;
  padding: 50rpx 0 30rpx 0;
}
.my-radius{
  border-radius: 12rpx;
  overflow: hidden
}
.cu-tag[class*="cuIcon-"] {
	width: 32rpx;
	height: 32rpx;
	top: -4rpx;
	right: -4rpx;
}
.my-icon image {
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
  margin: 0 auto
}
.cu-tag:empty:not([class*="icon"]) {
  padding: 0rpx;
  width: 30rpx;
  height: 30rpx;
  top: 5rpx;
  right: 5rpx;
}
.my-iconcolor{
  background: rgba(255, 255, 255, 0.96)
}

.shadow-shop {
  box-shadow: 0rpx 0rpx 90rpx 0rpx rgba(0, 0, 0, 0.1);
}
.qrcode-img{
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 350rpx;
  right: 30rpx;
  z-index: 1024;
  opacity: 0.8;
  box-shadow: 0rpx 8rpx 30rpx 0rpx rgba(0, 0, 0, 0.3);
  border: none
}

.text-my{
    color: #aaa !important;
}
.cu-btn.sm {
  padding: 0 20rpx;
  font-size: 20rpx;
  height: 48rpx;
  width: auto;
}
.cu-list.grid>.cu-item text {
  display: block;
  color: #333333;
  margin-top: -5rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}